rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ORG FILES
   match /org/proofs/{uid}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    match /Organizations/{orgId}/profile {
      allow read, write: if request.auth != null && request.auth.uid == orgId;
    }

    // USER FILES
    match /Users/{userId}/profile {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // EVENT FILES
    match /Events/{eventId} {
      allow read: if true; // All event images are public
      allow write: if request.auth != null 
        && request.auth.token.organization == true;
    }
  }
}
