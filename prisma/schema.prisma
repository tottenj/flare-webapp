generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id
  email        String     @unique
  account_type String
  flareOrg     FlareOrg?
  flareUser    FlareUser?

  @@map("user")
}

model FlareUser {
  id      String @id @default(cuid())
  user_id String @unique
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("flare_user")
}

model FlareOrg {
  id          String   @id @default(cuid())
  user_id     String   @unique
  description String?
  verified    Boolean  @default(false)
  location_id String
  events      Event[]
  location    Location @relation(fields: [location_id], references: [id])
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  socials     Socials?

  @@map("flare_org")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model spatial_ref_sys {
  srid      Int     @id
  auth_name String? @db.VarChar(256)
  auth_srid Int?
  srtext    String? @db.VarChar(2048)
  proj4text String? @db.VarChar(2048)
}

model Event {
  id           String   @id @default(cuid())
  flare_id     String
  title        String
  description  String?
  startDate    DateTime
  endDate      DateTime
  price        Float?   @default(0)
  ticketLink   String?
  verified     Boolean  @default(false)
  createdAt    DateTime @default(now())
  location_id  String
  organization FlareOrg @relation(fields: [flare_id], references: [id], onDelete: Cascade)
  location     Location @relation(fields: [location_id], references: [id])

  @@map("event")
}

model Location {
  id            String                   @id @default(cuid())
  place_id      String                   @unique
  name          String?
  coordinates   Unsupported("geography")
  events        Event[]
  organizations FlareOrg[]

  @@map("location")
}

model Socials {
  id           String   @id @default(cuid())
  flare_id     String   @unique
  twitter      String?
  facebook     String?
  instagram    String?
  other        String?
  organization FlareOrg @relation(fields: [flare_id], references: [id], onDelete: Cascade)

  @@map("socials")
}
