rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
  		match /Organizations/{orgId}{
      	allow read: if resource.data.verified == true || request.auth.uid == orgId || request.auth.token.admin == true;
        allow create: if true;
        allow update: if request.auth != null
        	&& request.auth.uid == orgId
          && request.resource.data.verified == resource.data.verified
          && request.resource.data.id == orgId;
      }
      
      match /Organizations/{orgId}/Saved/{eventId}{
      	allow read, write: if request.auth != null && request.auth.uid == orgId 
      }
      
      match /Users/{userId}{
      	allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /Users/{userId}/Saved/{savedId}{
      	allow read, write: if request.auth != null && request.auth.uid == userId;
      }
			
      match /Events/{eventId} {
      	allow read: if resource.data.verified == true || resource.data.flareId == request.auth.uid;
        allow create, update, delete: if request.auth != null 
        	&& request.auth.token.organization == true 
          && request.resource.data.flareId == request.auth.uid
      }
      
      
    
  }
}